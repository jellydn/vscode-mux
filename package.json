{
  "publisher": "jellydn",
  "name": "vscode-mux",
  "displayName": "vscode-mux",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.x",
  "description": "Integrate VS Code terminal with tmux or zellij for seamless multiplexing",
  "author": "Dung Huynh Duc <dung@productsway.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/jellydn",
  "homepage": "https://github.com/jellydn/vscode-mux#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jellydn/vscode-mux"
  },
  "bugs": {
    "url": "https://github.com/jellydn/vscode-mux/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/jellydn"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.cjs",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onTerminalProfile:codemux",
    "onCommand:codemux.killSession",
    "onCommand:codemux.newSession"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codemux.killSession",
        "title": "CodeMux: Kill Current Session"
      },
      {
        "command": "codemux.newSession",
        "title": "CodeMux: New Session"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "vscode-mux",
      "properties": {
        "codemux.multiplexer": {
          "type": "string",
          "enum": [
            "tmux",
            "zellij"
          ],
          "default": "tmux",
          "description": "Terminal multiplexer to use"
        },
        "codemux.sessionNameStrategy": {
          "type": "string",
          "enum": [
            "workspace",
            "folder",
            "custom"
          ],
          "default": "workspace",
          "description": "How to derive session name from workspace"
        },
        "codemux.customSessionName": {
          "type": "string",
          "default": "",
          "description": "Custom session name when sessionNameStrategy is 'custom'"
        },
        "codemux.autoAttach": {
          "type": "boolean",
          "default": true,
          "description": "Automatically attach to existing session"
        },
        "codemux.useCommandMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable command-only mode. Use 'CodeMux: New Session' command from palette instead of setting as default terminal profile"
        }
      }
    },
    "terminal": {
      "profiles": [
        {
          "title": "CodeMux",
          "id": "codemux"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "biome lint src --",
    "format": "biome format src --write",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "nr build",
    "release": "bumpp",
    "ext:package": "vsce package --no-dependencies",
    "ext:publish": "vsxpub --no-dependencies"
  },
  "devDependencies": {
    "@antfu/ni": "^28.0.0",
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.7.1",
    "bumpp": "^10.3.2",
    "ovsx": "^0.10.7",
    "reactive-vscode": "^1.0.0-beta.2",
    "taze": "^19.9.2",
    "tsdown": "^0.20.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.18",
    "vscode-ext-gen": "^1.5.1",
    "vsxpub": "^0.1.2"
  }
}

